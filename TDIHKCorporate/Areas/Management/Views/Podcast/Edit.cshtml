@model TDIHKCorporate.Types.Podcasts
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Management/Views/Shared/_layoutDashboard.cshtml";
}
<script src="~/Content/Scripts/Podcast.js"></script>

<h2>Podcast Düzenle</h2>
<hr />

<script>
    $(document).ready(function () {

        $("#PodcastLanguage").val('@Model.Language');
        $("#PodcastTitle").val('@Model.PodcastTitle');
        $("#PodcastDescription").val('@Model.PodcastDescription');
    });
</script>

<div class="col-lg-12">
    <div class="col-lg-4">
        <label>Podcast Dili</label>
        <select class="form-control" id="PodcastLanguage" name="Language" required>
            <option value="tr">TR</option>
            <option value="de">DE</option>
        </select>
        <br />
        <label>Podcast Dosyası <span id="podcastPath">@Model.PodcastFilePath</span></label><br />
        <input type="file" name="file" id="PodcastFile" sound-path="@Model.PodcastFilePath" value="Farklı bir dosya seç" accept="audio/*" required />
        <br />
        <br />
        <label>Podcast Title</label>
        <input type="text" name="PodcastTitle" id="PodcastTitle" class="form-control" placeholder="Podcast Title" value="" required />
        <br />
        <label>Podcast Description</label>
        <input type="text" class="form-control" placeholder="Podcast Description" id="PodcastDescription" name="PodcastDescription" value="" required />
        <br />
        <input type="submit" onclick="EditPodcast(@Model.ID)" class="btn btn-success" style="float:right" name="name" value="Güncelle" />
    </div>
</div>


<script type="text/javascript">
    $('#PodcastFile').change(function (event) {
        if (window.FormData !== undefined) {

            var fileUpload = $("#PodcastFile").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }


            $.ajax({
                url: '/Management/File/FileCreateForPodcast',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {
                    debugger
                    $("#PodcastFile").attr("sound-path", result);
                    $("#podcastPath").text(result)
                },
                error: function (err) {
                    alert(err.statusText);
                }
            });
        } else {
            alert("FormData is not supported.");
        }
    });
</script>