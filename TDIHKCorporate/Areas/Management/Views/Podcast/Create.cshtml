
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Management/Views/Shared/_layoutDashboard.cshtml";
}

<h5>Podcast Ekle</h5>
<br />

@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}
else if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@using (Html.BeginForm("Create", "Podcast", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
<div class="col-lg-12">
    <div class="col-lg-4">
        <label>Podcast Dili</label>
        <select class="form-control" id="Language" name="Language" required>
            <option value="tr">TR</option>
            <option value="de">DE</option>
        </select>
        <br />
        <label>Podcast Dosyası</label><br />
        <input type="file" name="file" id="file" value="Dosya Yükle" accept="audio/*" required />
        <br />
        <br />
        <label>Podcast Title</label>
        <input type="text" name="PodcastTitle" id="PodcastTitle" class="form-control" placeholder="Podcast Title" value="" required />
        <br />
        <label>Podcast Description</label>
        <input type="text" class="form-control" placeholder="Podcast Description" name="PodcastDescription" id="PodcastDescription" value="" required />
        <br />
        <input type="submit" id="SavePodcast" onclick="uploadFile()" class="btn btn-success" style="float:right" name="name" value="Kaydet" />
    </div>

    <div class="col-lg-4">
        <div class="modal hide" id="pleaseWaitDialog" data-backdrop="static" data-keyboard="false">
            <div class="modal-header">
                <h1>Processing...</h1>
            </div><div class="modal-body">
                <div class="progress progress-striped active">
                        <div class="bar" style="width: 100%;">
                        </div>
                    </div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>



}


