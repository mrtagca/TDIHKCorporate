
@{
    ViewBag.Title = "CreateContent";
    Layout = "~/Areas/Management/Views/Shared/_layoutDashboard.cshtml";
}

<script src="~/Content/Scripts/Slider.js"></script>

<h5>@Resources.resource.SliderIcerikEkle</h5>
<hr />

<script>
    $(document).ready(function () {
        GetSliderList('SliderList','SliderWidthHeight');
    });
</script>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}
else if (ViewBag.Warning != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Warning
    </div>
}
else if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@using (Html.BeginForm("CreateContent", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div>
                <label>@Resources.resource.SliderAlaniSec</label>
                <br />

                <select id="SliderList" name="SliderID" type="text" class="form-control">
                </select>
            </div>
            <br />

            <div>
                <label>@Resources.resource.Baslik</label>
                <input type="text" id="SliderContentTitle" placeholder="Slider İçerik Başlığı" class="form-control" name="SliderContentTitle" value="" />
            </div>
            <br />

            <div>
                <label>@Resources.resource.Dil</label>
                <select class="form-control" id="SliderContentLanguage" name="SliderContentLanguage">
                    <option value="tr">TR</option>
                    <option value="de">DE</option>
                </select>
            </div>
            <br />

            <div>
                <label>@Resources.resource.SliderGorselYukle <span id="SliderWidthHeight"></span></label>
                <br />
                <input type="file" name="sliderFile" value="" accept="image/x-png,image/gif,image/jpeg" />
            </div>
            <br />

            <div>
                <label>@Resources.resource.SliderSirasi</label>
                <br />
                <select id="SliderPriority" name="SliderPriority" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
            <br />
            <div>
                <label>@Resources.resource.SliderUrl</label>
                <br />
                <input type="text" placeholder="Content URL" class="form-control" name="SliderURL" value="" />
            </div>
            <br />
            <div>
                @*<button class="btn btn-success float-lg-right">Kaydet</button>*@
                <input type="submit" name="Submit" id="btnSubmit" value="Kaydet" class="btn btn-success float-lg-right" />
            </div>
        </div>
    </div>
}

