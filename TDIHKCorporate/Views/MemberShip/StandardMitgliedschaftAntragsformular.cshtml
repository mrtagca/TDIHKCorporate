<script type="text/javascript">
    $("#IsCorporate").change(function () {

        document.getElementById("Name").setAttribute("placeholder", "Name der Firma*");
        document.getElementById("WebSite").setAttribute("required", "required");
        document.getElementById("WebSite").setAttribute("placeholder", 'Website*');

    });

    $("#IsPrivate").change(function () {

        document.getElementById("Name").setAttribute("placeholder", "Name*");
        document.getElementById("WebSite").removeAttribute("required");
        document.getElementById("WebSite").setAttribute("placeholder", "Website");

    });

    $('#FileUpload').change(function (event) {
        if (window.FormData !== undefined) {

            var fileUpload = $("#FileUpload").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }

            $.ajax({
                url: '/Management/Image/ImageBrowserUploadForStandardMemberShip',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {
                    debugger
                    $("#FileUpload").attr("image-path", result);
                },
                error: function (err) {
                    alert(err.statusText);
                }
            });
        } else {
            alert("FormData is not supported.");
        }
    });
</script>


