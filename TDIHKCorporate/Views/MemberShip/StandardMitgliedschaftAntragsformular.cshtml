
@{
    ViewBag.Title = "StandardMitgliedschaftAntragsformular";
    Layout = "~/Views/Shared/_layoutMaster.cshtml";
}

<script src="~/Content/Scripts/RequestHelper.js"></script>
<script src="~/Content/Scripts/ValidateHelper.js"></script>
<script src="~/Content/Scripts/StandartMemberShip.js"></script>

<main class="uk-container" uk-scrollspy="cls: uk-animation-fade; target: > section; delay: 250">
    <section class="uk-margin-medium-top">
        <div class="uk-text-center">
            <div class="uk-h2">@Resources.resource.UyelikBasvurusu</div>
            <p>Lorem ipsum dolor sit amet</p>
        </div>
    </section>
    <section class="uk-section">
        <form class="uk-form-stacked uk-child-width-1-1 uk-width-3-4@s uk-margin-auto msa-form uk-box-shadow-medium" uk-grid>
            <div>
                <div class="uk-margin">
                    <div class="uk-text-large">@Resources.resource.TDIHKUyeligineBasvuruyorum</div>
                </div>
            </div>

            <div id="MemberTypeArea" class="uk-margin">
                <div class="uk-form-label uk-hidden">Radio</div>
                <div class="uk-form-controls  label-font-size">
                    <label>
                        <input class="uk-radio" type="radio" name="radio1" id="IsCorporate">@Resources.resource.KurumBasvurusu
                    </label>
                    <label><input class="uk-radio" type="radio" name="radio1" id="IsPrivate">@Resources.resource.BireyselBasvuru</label>
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" name="Name" id="Name" onkeypress="validateText(event)" type="text" placeholder="@Resources.resource.FirmaAdi*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="Street" onkeypress="validateText(event)" type="text" placeholder="@Resources.resource.Sokak*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="HomePhone" onkeypress="validateNumber(event)" type="text" placeholder="@Resources.resource.EvNumarasi*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="PostalCode" onkeypress="validateNumber(event)" type="text" placeholder="@Resources.resource.PostaKodu*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="City" onkeypress="validateOnlyText(event)" type="text" placeholder="@Resources.resource.Yer*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="Email" pattern="^[a-zA-Z0-9._+-]+&#64;[a-zA-Z0-9.-]+\.[a-zA-Z]{2,4}$" type="email" placeholder="@Resources.resource.EmailAdres*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="PhoneNumber" onkeypress="validateNumber(event)" type="tel" placeholder="@Resources.resource.Telefon*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="WebSite" type="text" placeholder="@Resources.resource.Website*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="Fax" onkeypress="validateNumber(event)" type="tel" placeholder="@Resources.resource.Fax*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="ResponsiblePersonel" onkeypress="validateOnlyText(event)" type="text" placeholder="@Resources.resource.Temsilci*" required>
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="PersonelPosition" onkeypress="validateOnlyText(event)" type="text" placeholder="@Resources.resource.Pozisyon*" required>
                </div>
            </div>
            <div id="MemberPacketArea" class="uk-margin">
                <div class="uk-form-label uk-hidden">Radio</div>
                <div class="uk-form-controls uk-flex uk-flex-between label-font-size">
                    <label><input class="uk-radio" type="radio" value="bis 5 mio. € (1.200 €/Jahr)" id="MemberPacket1">@Resources.resource.5MilyonEuroKadar</label>
                    <label><input class="uk-radio" type="radio" value="bis 20 mio. €" id="MemberPacket2">@Resources.resource.20MilyonEuroKadar</label>
                    <label><input class="uk-radio" type="radio" value="über 20 Mio. €" id="MemberPacket3">@Resources.resource.20MilyonEuroUzerinde</label>
                </div>
            </div>
            <div class="uk-margin">
                <a class="uk-button uk-button-default premium-form-btn uk-width-1-1">@Resources.resource.10KoltuktanBirisiniIsterMisiniz <u>@Resources.resource.PremiumUyelik</u> @Resources.resource.Almak?</a>
            </div>
            <div class="uk-text-large">@Resources.resource.LutfenSırketLogonuzuBurayaYukleyin</div>
            <div class="uk-margin">
                <div uk-form-custom>
                    <input id="FileUpload" name="file" image-path="" accept="image/x-png,image/gif,image/jpeg" type="file">
                    <button class="uk-button uk-button-secondary uk-border-rounded" type="button" tabindex="-1">@Resources.resource.DosyaSeciniz</button>
                </div>
            </div>
            <div class="uk-text-large">@Resources.resource.TavsiyeEdeceginizDigerOdaUyeleri:</div>
            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" id="MemberSuggestion1" onkeypress="validateOnlyText(event)" type="text" placeholder="@Resources.resource.FirmaAdi">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" id="MemberSuggestion2" onkeypress="validateOnlyText(event)" type="text" placeholder="@Resources.resource.FirmaAdi">
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" id="MemberSuggestion3" onkeypress="validateOnlyText(event)" type="text" placeholder="@Resources.resource.FirmaAdi">
                </div>
            </div>
            <div class="uk-text-large">Die Kammer ist mir bekannt durch Empfehlung/Informationen von:</div>
            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" id="SuggestionInfo" onkeypress="validateOnlyText(event)" type="text" placeholder="">
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s">
                <div class="uk-form-controls">
                    <input class="uk-input" id="LocationAndTime" onkeypress="validateText(event)" type="text" placeholder="@Resources.resource.YerZaman">
                </div>
            </div>
            <div class="uk-margin uk-width-1-2@s size-22 size-15-m">
                <label><input class="uk-checkbox" id="DigitalSignature" type="checkbox">@Resources.resource.ElektronikImza</label>
            </div>
            <div class="uk-margin size-18 size-15-m color-dark-grey line-height-1">
                Für die Aufnahme in die Kammer ist gem. § 7 Abs.1 der Satzung der Antrag und die Zahlung des
                Beitrages erforderlich. Über den schriftlichen Antrag entscheidet der Vorstand. Die Entscheidung
                wird dem Antragsteller schriftlich mitgeteilt. Jedes Mitglied ist gem. § 8 II der Satzung berechtigt,
                jederzeit aus der Kammer auszutreten. Die Austrittserklärung des Mitglieds ist schriftlich bei dem
                Vorstand einzureichen. Das Mitglied ist trotz des Austritts verpflichtet, seinen Beitrag für das
                laufende Kalenderjahr zu entrichten.
            </div>
            <div class="uk-margin line-height-1">
                <p>TD-IHK Türkisch-Deutsche Industrie- und Handelskammer - Unternehmerverband e.V.</p>
                <p>Türk Alman Ticaret ve Sanayi Odası Leipziger Platz 14, 10117 Berlin</p>
                <div class="uk-flex contact-infos">
                    <a href="tel:+4903023329950" class="uk-link-reset uk-margin-small-bottom">+49 (0) 30 233 299 50 |</a>
                    <span class="uk-margin-small-bottom">Fax: +49 (0) 30 233 299 510 | </span>
                    <a href="mailto:info@td-ihk.de" class="uk-link-reset uk-margin-small-bottom">info@td-ihk.de | </a>
                    <span class="uk-margin-small-bottom">www.th-idk.de</span>
                </div>
            </div>
            <div class="uk-margin size-22 size-15-m">
                <label>
                    <input class="uk-checkbox" id="PrivacyPolicy" type="checkbox">@Resources.resource.BurayaTiklayarakKabulEdebilirsiniz <a href="#" class="uk-link-reset" target="_blank"><u>@Resources.resource.GizlilikPolitikasiveEsasSozlesme.</u></a>
                </label>
            </div>
            <div onclick="SaveMember()" class="uk-margin uk-width-2-5@s uk-margin-auto">
                <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-border-rounded">@Resources.resource.Gonder</button>
            </div>
            <div class="uk-width-1-1">
                <div class="uk-width-1-3@s uk-margin-auto uk-flex uk-flex-around">
                    <div>
                        <img src="~/Content/MainSite/assets/images/StandartForm/letter.png" width="40" height="40" />
                    </div>
                    <div>
                        <img src="~/Content/MainSite/assets/images/StandartForm/pdf-icon.png" width="40" height="40" />
                    </div>
                    <div>
                        <img src="~/Content/MainSite/assets/images/StandartForm/print.png" width="40" height="40" />
                    </div>
                </div>
            </div>
        </form>
    </section>
</main>

<script type="text/javascript">
    $("#IsCorporate").change(function () {

        document.getElementById("Name").setAttribute("placeholder", "Name der Firma*");
    });

    $("#IsPrivate").change(function () {

        document.getElementById("Name").setAttribute("placeholder", "Name der Person*");
    });

    $('#FileUpload').change(function (event) {
        if (window.FormData !== undefined) {

            var fileUpload = $("#FileUpload").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }

            $.ajax({
                url: '/Management/Image/ImageBrowserUploadForStandardMemberShip',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {
                    debugger
                    $("#FileUpload").attr("image-path", result);
                },
                error: function (err) {
                    alert(err.statusText);
                }
            });
        } else {
            alert("FormData is not supported.");
        }
    });
</script>
