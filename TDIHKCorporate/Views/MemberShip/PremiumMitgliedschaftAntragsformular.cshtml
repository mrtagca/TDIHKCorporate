<script type="text/javascript">

    var lang = '@lang';

    $("#IsCorporate").change(function () {

        document.getElementById("Name").setAttribute("placeholder", "Firma*");
    });

    $("#IsPrivate").change(function () {

        if (lang === 'tr') {
            document.getElementById("Name").setAttribute("placeholder", "İsim*");
        }
        else {
            document.getElementById("Name").setAttribute("placeholder", "Name*");
        }

    });

    $('#FileUpload').change(function (event) {
        if (window.FormData !== undefined) {

            var fileUpload = $("#FileUpload").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }

            $.ajax({
                url: '/Management/Image/ImageBrowserUploadForStandardMemberShip',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {
                    debugger
                    $("#FileUpload").attr("image-path", result);

                    document.getElementById("Preview").innerHTML = '<p>Upload Success<p/>';
                },
                error: function (err) {
                    alert(err.statusText);
                    document.getElementById("Preview").innerHTML = '<p>Upload Fail<p/>';
                }
            });
        } else {
            alert("FormData is not supported.");
        }
    });
</script>


<script src="~/Content/plugins/jspdf/dist/html2pdf.bundle.min.js"></script>

<script>
    function test() {

        debugger
        // Get the element.
        var element = document.getElementById('PremiumFormScreenShot');

        // Choose pagebreak options based on mode.
        var mode = 'css';
        var pagebreak = (mode === 'specify') ?
            { mode: '', before: '.before', after: '.after', avoid: '.avoid' } :
            { mode: mode };

        // Generate the PDF.
        html2pdf().from(element).set({
            filename: mode + '.pdf',
            pagebreak: pagebreak,
            jsPDF: { orientation: 'portrait', unit: 'in', format: 'letter', compressPDF: true }
        }).save();
    }
</script>