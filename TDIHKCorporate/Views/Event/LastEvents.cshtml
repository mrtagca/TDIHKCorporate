    <div class="uk-grid uk-grid-small uk-grid-row-medium uk-child-width-1-2@s uk-child-width-1-3@m event-cards uk-margin-large-bottom" uk-grid uk-scrollspy="cls: uk-animation-fade; target: > div; delay: 100">

        @foreach (var item in Model)
        {
            <div >
                <a href="" class="uk-link-reset uk-inline-clip uk-transition-toggle"> 
                    <div style="width:360px;height:278px;">
                        <img style="width:100%;height:100%;" src="@item.EventImagePath" alt="" class="uk-transition-scale-up uk-transition-opaque uk-width-1-1" uk-img>
                    </div>
                    <div class="uk-overlay uk-position-bottom-left uk-h2 uk-flex uk-flex-column uk-margin-remove">
                        <span>@item.EventCategoryName<span>:</span></span>
                        <span>@item.EventTitle</span>
                    </div>
                </a>
            </div>
        }

