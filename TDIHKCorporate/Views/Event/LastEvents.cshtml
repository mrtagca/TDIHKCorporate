@model List<TDIHKCorporate.Types.Events>
@using System.Globalization

@{
    Layout = null;
}

<style>
    .cover {
        object-fit: cover;
        width: 360px;
        height: 278px;
    }
</style>

<section>
    <div class="uk-text-center events-page-header">@Resources.resource.GecmisEtkinlikler</div>
    <div class="uk-grid uk-grid-medium uk-child-width-1-2@s uk-child-width-1-3@m event-cards uk-margin-large-bottom" uk-grid uk-scrollspy="cls: uk-animation-fade; target: > div; delay: 100">

        @{
            CultureInfo ci = System.Threading.Thread.CurrentThread.CurrentCulture;
            string lang = ci.TwoLetterISOLanguageName;

        }


        @foreach (var item in Model)
        {
        <div>
            @if (lang == "tr")
            {
                <a href="/tr/etkinlikler/@item.EventSeoLink" class="uk-link-reset uk-inline-clip uk-transition-toggle">

                    <div class="uk-height-1-1">
                        <img src="@item.EventImagePath" alt="" class="uk-transition-scale-up uk-transition-opaque uk-width-1-1" uk-img>
                    </div>
                    <div class="uk-overlay uk-position-cover uk-h5 uk-flex uk-flex-column uk-flex-right uk-margin-remove uk-visible@l" style="background-color: rgba(255,255,255, .6);">
                        <span>@item.EventCategoryName<span>:</span></span>
                        <span class="line-clamp-3">@item.EventTitle</span>
                    </div>
                    <div class="uk-hidden@l">
						<div>@item.EventCategoryName<span>:</span></div>
						<div>@item.EventTitle</div>
                    </div>
                </a>
            }
            else
            {
		<a href="/de/events/@item.EventSeoLink" class="uk-link-reset uk-inline-clip uk-transition-toggle">

			<div class="uk-height-1-1">
				<img src="@item.EventImagePath" alt="" class="cover uk-transition-scale-up uk-transition-opaque uk-width-1-1" uk-img>
			</div>
			<div class="uk-overlay uk-position-cover uk-h3 uk-flex uk-flex-column uk-flex-right uk-margin-remove uk-visible@l" style="background-color: rgba(255,255,255, .6);">
				<span>@item.EventCategoryName<span>:</span></span>
				<span class="line-clamp-3">@item.EventTitle</span>
			</div>
			<div class="uk-hidden@l">
				<div>@item.EventCategoryName<span>:</span></div>
				<div>@item.EventTitle</div>
			</div>
		</a>
            }
        </div>
        }

    </div>
</section>