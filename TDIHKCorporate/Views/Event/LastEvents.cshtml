@model List<TDIHKCorporate.Types.Events>
@using System.Globalization

@{
    Layout = null;
    CultureInfo cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;
    string lang = cultureInfo.TwoLetterISOLanguageName;
}

<head>
    <meta charset="utf-8">

    @if (lang == "tr")
    {
        <meta name="description" content="TD IHK nın geçmiş etkinliklerine bu sayfadan ulaşabilirsiniz. Bu sayfada geçişteki buluşma etkinlikleri,toplantılar ve eğitimlere ait bilgilendirmelere ulaşabilirsiniz.">
        <title>TD IHK Geçmiş Etkinlikler</title>
    }
    else
    {
        <meta name="description" content="Auf dieser Seite können Sie die bisherigen Aktivitäten von TD IHK erreichen. Auf dieser Seite finden Sie Informationen zu Besprechungsveranstaltungen, Besprechungen und Schulungen im Übergang.">
        <title>TD IHK Last Events</title>
    }

    <meta name="keywords" content="td ihk geçmiş etkinlikler,td ihk last events,td ihk etkinlikler,td ihk events">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="TD IHK">
</head>

<style>
    .cover {
        object-fit: cover;
        width: 360px;
        height: 278px;
    }
</style>

<section>
    <div class="uk-text-center events-page-header">@Resources.resource.GecmisEtkinlikler</div>
    <div class="uk-grid uk-grid-medium uk-child-width-1-2@s uk-child-width-1-3@m event-cards uk-margin-large-bottom" uk-grid uk-scrollspy="cls: uk-animation-fade; target: > div; delay: 100">



        @foreach (var item in Model)
        {
            <div>
                @if (lang == "tr")
                {
                    <a href="/tr/etkinlikler/@item.EventSeoLink" class="uk-link-reset uk-inline-clip uk-transition-toggle">

                        <div class="uk-height-1-1">
                            <img src="@item.EventImagePath" alt="" class="uk-transition-scale-up uk-transition-opaque uk-width-1-1" uk-img>
                        </div>
                        <div class="uk-overlay uk-position-cover uk-h5 uk-flex uk-flex-column uk-flex-right uk-margin-remove uk-visible@l" style="background-color: rgba(255,255,255, .6);">
                            <span>@item.EventCategoryName<span>:</span></span>
                            <span class="line-clamp-3">@item.EventTitle</span>
                        </div>
                        <div class="uk-hidden@l">
                            <div>@item.EventCategoryName<span>:</span></div>
                            <div>@item.EventTitle</div>
                        </div>
                    </a>
                }
                else
                {
                    <a href="/de/events/@item.EventSeoLink" class="uk-link-reset uk-inline-clip uk-transition-toggle">

                        <div class="uk-height-1-1">
                            <img src="@item.EventImagePath" alt="" class="uk-transition-scale-up uk-transition-opaque uk-width-1-1" uk-img>
                        </div>
                        <div class="uk-overlay uk-position-cover uk-h5 uk-flex uk-flex-column uk-flex-right uk-margin-remove uk-visible@l" style="background-color: rgba(255,255,255, .6);">
                            <span>@item.EventCategoryName<span>:</span></span>
                            <span class="line-clamp-3">@item.EventTitle</span>
                        </div>
                        <div class="uk-hidden@l">
                            <div>@item.EventCategoryName<span>:</span></div>
                            <div>@item.EventTitle</div>
                        </div>
                    </a>
                }
            </div>
        }

    </div>
</section>