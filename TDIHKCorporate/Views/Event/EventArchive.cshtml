@model List<TDIHKCorporate.Types.Events>
@using System.Globalization



@{
    ViewBag.Title = "EventArchive";
    Layout = "~/Views/Shared/_layoutMaster.cshtml";

    CultureInfo cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;

    string lang = cultureInfo.TwoLetterISOLanguageName;
}

<script>
    $(document).ready(function () {
        $("#EventArchive").DataTable();
    })
</script>


<main class="uk-container" uk-scrollspy="cls: uk-animation-fade; target: > section; delay: 250">
    <section class="uk-section">
        <h1>@Resources.resource.EtkinlikArsivi</h1>
        <h2>@Resources.resource.Etkinlikler</h2>
        <!-- Bu div dahil tablonun içinde arşivde istediğimiz verileri döndürebiliriz-->

        <div class="uk-overflow-auto">
            <table id="EventArchive" class="uk-table uk-table-hover uk-table-striped uk-table-small uk-table-justify uk-table-middle uk-table-responsive">
                <thead>
                    <tr>
                        <th class="uk-width-small">@Resources.resource.Tarih</th>
                        <th class="uk-width-expand">@Resources.resource.EtkinlikBasligi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            @if (lang == "tr")
                            {
                                <td class="uk-table-link uk-text-nowrap"><a class="uk-link-reset" href="/tr/etkinlikler/@item.EventSeoLink">@item.EventTitle</a></td>
                            }
                            else
                            {
                                <td class="uk-table-link uk-text-nowrap"><a class="uk-link-reset" href="/de/events/@item.EventSeoLink">@item.EventTitle</a></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</main>
