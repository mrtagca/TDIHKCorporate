@model TDIHKCorporate.Types.Pages
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutMaster.cshtml";
}

<main class="uk-container" uk-scrollspy="cls: uk-animation-fade; target: > section; delay: 100">

    @Html.Raw(Model.PageContent)


    <!--İçerikler-->
    <section>
        <div class="uk-grid uk-grid-small uk-child-width-1-1 uk-child-width-1-2@m uk-child-width-1-4@l uk-margin-small-top" uk-grid>
            <div>
                <a href="" class="uk-link-reset">
                    <div class="uk-background-secondary uk-border-rounded uk-h6 uk-text-center uk-button uk-text-bold uk-width-1-1">
                        Mitgliederevents
                    </div>
                </a>
            </div>
            <div>
                <a href="" class="uk-link-reset">
                    <div class="uk-background-secondary uk-border-rounded uk-h6 uk-text-center uk-button uk-text-bold uk-width-1-1">
                        Workshop
                    </div>
                </a>
            </div>
            <div>
                <a href="" class="uk-link-reset">
                    <div class="uk-background-secondary uk-border-rounded uk-h6 uk-text-center uk-button uk-text-bold uk-width-1-1">
                        Schulung
                    </div>
                </a>
            </div>
            <div>
                <a href="" class="uk-link-reset">
                    <div class="uk-background-secondary uk-border-rounded uk-h6 uk-text-center uk-button uk-text-bold uk-width-1-1">
                        Summit
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!--Yaklaşan Etkinlikler (Kırmızılı Flamalı bölüm)-->

    @Html.Action("FutureEvents", "Event")



    <!--Kare şeklindeki etkinlikler-->
    @Html.Action("LastEvents", "Event")

    

    @if (Model.NewsletterPart)
    {
        @Html.Action("Index", "Newsletter")
    }

    @if (Model.VorteillePart)
    {
        @Html.Action("Vorteille", "Newsletter")
    }

</main>
