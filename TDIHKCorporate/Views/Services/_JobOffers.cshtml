@model List<TDIHKCorporate.Types.JobOffers>
@using System.Globalization

@{
    CultureInfo cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;

    string lang = cultureInfo.TwoLetterISOLanguageName;
}
<!-- Kartlar-->
<section class="uk-section uk-section-muted jobangebote-wrapper uk-border-rounded uk-margin-medium-bottom">
    <div class="uk-grid uk-grid-small uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid uk-height-match="target: .uk-card-body; row: false">
        <!--Kart Örneği-->

        <div>
            <div class="uk-card uk-card-primary uk-border-rounded">
                <div class="uk-card-body uk-flex uk-flex-column uk-flex-between">
                    <div>
                        <div class="uk-button uk-button-secondary uk-width-1-1 uk-text-bold uk-margin-medium-bottom uk-border-rounded">@Resources.resource.LogonuzBurayaGelecek</div>
                    </div>
                    <div class="uk-text-center">@Resources.resource.UyelerimizIcinBu <u>@Resources.resource.Ucretsizdir.</u> @Resources.resource.JobageboteMetin.</div>
					<div>
						@if (lang == "tr")
						{
							<a href="uyelik" class="uk-button uk-button-secondary uk-width-1-1 uk-border-rounded" style="margin-bottom: 64px;">@Resources.resource.Avantajlar</a>
						}
						else
						{
							<a href="mitgliedschaft" class="uk-button uk-button-secondary uk-width-1-1 uk-border-rounded" style="margin-bottom: 64px;">@Resources.resource.Avantajlar</a>
						}

					</div>
                </div>
            </div>
        </div>

        @foreach (var job in Model)
        {
            <div>
                <div class="uk-card uk-card-secondary uk-border-rounded">
                    <div class="uk-card-body uk-flex uk-flex-column uk-flex-between">
                        <div class="uk-flex uk-flex-column uk-flex-between">
                            <div class="uk-flex uk-flex-center uk-margin-medium-bottom">
                                <img src="@job.LogoPath" class="height-card-logo" />
                            </div>
                            <div>
                                <div class="size-20 uk-text-bold">@job.Position</div>
                                <div class="color-dark-grey size-18 size-15-m">@job.CorporationName</div>
                                <div class="color-dark-grey size-18 size-15-m">@job.Location</div>
                            </div>
                        </div>
                        <div>
                            <div class="uk-flex uk-flex-center uk-margin-medium-top uk-margin-medium-bottom">
                                <a href="@job.JobOfferURL" target="_blank" class="uk-button uk-button-primary uk-border-rounded uk-width-1-1">@Resources.resource.IsTeklifi</a>
                            </div>
                            @if (lang == "tr")
                            {
                                double difference = (DateTime.Now - job.CreatedDate).TotalDays;
                                <div class="color-dark-grey">
                                    @Convert.ToInt32(difference) gün önce
                                </div>
                            }
                            else
                            {
                                double difference = (DateTime.Now - job.CreatedDate).TotalDays;
                                <div class="color-dark-grey">
                                    Vor <span>@Convert.ToInt32(difference)</span> tagen
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }



