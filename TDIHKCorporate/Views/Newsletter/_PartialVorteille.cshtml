@using System.Globalization

@{

    CultureInfo cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;

    string lang = cultureInfo.TwoLetterISOLanguageName;
}

<section class="uk-padding-large uk-scrollspy-inview uk-animation-fade" style="">
    <div class="uk-width-2-3@s uk-margin-auto">
        <div class="uk-text-center uk-margin-medium-bottom">
            <div class="uk-h3 uk-margin-small-bottom">@Resources.resource.AlmanyaYatirimveTicaretRaporu2020</div><div>
                <span>
                    @Resources.resource.VorteilleMetin
                </span>
            </div>
        </div><div class="uk-width-1-1 uk-margin-large-bottom">
            @if (lang == "tr")
            {
                <a href="/tr/sayfalar/standart-uyelik" class="uk-button uk-button-primary uk-width-1-1 uk-box-shadow-medium uk-border-rounded">@Resources.resource.Avantajlar</a>
            }
            else
            {
                <a href="/de/seiten/standard-mitgliedschaft" class="uk-button uk-button-primary uk-width-1-1 uk-box-shadow-medium uk-border-rounded">@Resources.resource.Avantajlar</a>
            }
        </div>
    </div>
</section>

