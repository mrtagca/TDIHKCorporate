@model List<TDIHKCorporate.Types.Events>
@using System.Globalization

<h2 class="uk-text-center uk-text-left@s uk-text-bold uk-margin-medium-top">Kalender</h2>
<div class="uk-grid uk-grid-small uk-child-width-1-1 uk-child-width-1-3@s uk-child-width-1-4@m uk-margin-small-bottom" uk-grid uk-height-match="target: .uk-card-body;">
    @foreach (var item in Model)
    {
        <!-- Takvim Kartları-->

        <div class="kalender-cart">
            <div class="uk-card uk-card-hover uk-card-primary">
                <div class="uk-card-body uk-flex uk-flex-column uk-flex-between">
                    <div>
                        @{
                            CultureInfo ci = System.Threading.Thread.CurrentThread.CurrentCulture;
                            <div class="size-20 size-15-m line-height-1">@item.EventDate.ToString("MMM", ci).ToUpper()</div>
                        }
                        <div class="size-50 line-height-1 uk-margin-small-bottom">@item.EventDate.Day</div>
                        <div class="size-20 line-height-1 uk-margin-small-bottom">@item.EventTitle</div>

                    </div>
                    <div>
                        @{
                            TimeSpan tsp = new TimeSpan(item.EventTime.Hours, item.EventTime.Minutes, item.EventTime.Seconds);
                            <div class="uk-flex uk-flex-middle"><span class="uk-icon uk-margin-small-right" uk-icon="icon: icn-clock"></span><span class="size-20">@String.Format("{0:hh\\:mm}", tsp)</span></div>
                        }
                        <a href="#" class="uk-button uk-width-1-1 uk-button-secondary uk-margin-small-top uk-border-rounded color-global">Registrierung</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>

