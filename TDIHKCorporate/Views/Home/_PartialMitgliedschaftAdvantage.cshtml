@model List<TDIHKCorporate.Types.SliderContent>
@using System.Globalization

@{

	CultureInfo cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;

	string lang = cultureInfo.TwoLetterISOLanguageName;
}
<!--İkinci Slayt-->
<section>
	<h2 class="uk-text-center uk-text-bold">@Resources.resource.PremiumUyeAvantajlariDetayliBilgi</h2>
	<div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1"
		 uk-slider="autoplay: true; autoplay-interval: 5000">

		<ul class="uk-slider-items uk-child-width-1-1">

			@foreach (var item in Model)
			{
				<li>
					<a href="@item.SliderUrl"><img src="@item.ImagePath" alt=""></a>

				</li>
			}
		</ul>
		<a class="uk-position-center-left uk-position-small slide-arrow" href="#" uk-icon="icon: chevron-left"
		   uk-slider-item="previous"></a>
		<a class="uk-position-center-right uk-position-small slide-arrow" href="#" uk-icon="icon: chevron-right"
		   uk-slider-item="next"></a>
	</div>
	<div class="uk-padding uk-flex uk-flex-center uk-padding-remove-horizontal"
		 uk-scrollspy="cls: uk-animation-fade; delay: 250">
		@if (lang == "tr")
		{
			<a href="/tr/sayfalar/standart-uyelik" class="uk-button uk-button-primary uk-width-1-1 uk-width-1-3@s uk-width-1-5@m  uk-border-rounded">@Resources.resource.Avantajlar</a>
		}
		else
		{
			<a href="/de/seiten/standard-mitgliedschaft" class="uk-button uk-button-primary uk-width-1-1  uk-width-1-3@s uk-width-1-5@m uk-border-rounded">@Resources.resource.Avantajlar</a>
		}
	</div>
</section>
