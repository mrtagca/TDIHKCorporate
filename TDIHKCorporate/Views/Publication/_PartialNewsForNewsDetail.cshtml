@model List<TDIHKCorporate.Types.News>


<style>
    .cover {
        object-fit: cover;
        width: 500px;
        height: 300px;
    }
</style>

<section>
    <!--Haber kartları-->
    <div class="uk-flex uk-flex-middle uk-margin-small-bottom"><span style="height: 25px; width: 5px; background-color: black" class="uk-margin-small-right"></span><span class="size-20" style="color: black">News</span></div>
    <div class="uk-grid uk-grid-small uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-margin-medium-bottom" uk-grid>
        <!-- Buradaki imajlara da 500px en 300px boy şeklinde yüklemeliyiz.-->

        @foreach (var item in Model)
        {
            <div>
                @if (item.Language == "tr")
                {
                    <a href="/tr/haberler/@item.NewsSeoLink" class="uk-link-reset">
                        <div class="uk-inline-clip uk-transition-toggle">
                            <img src="@item.NewsThumbnailPath" class="cover uk-width-1-1 uk-height-1-1 uk-transition-opaque uk-transition-scale-up" />
                        </div>
                        <div class="news-card-title line-height-1">@item.NewsDescription</div>
                        @*<div class="news-card-subtitle">@item.NewsDescription</div>*@
                    </a>
                }
                else
                {
                    <a href="/de/nachrichten/@item.NewsSeoLink" class="uk-link-reset">
                        <div class="uk-inline-clip uk-transition-toggle">
                            <img src="@item.NewsThumbnailPath" class="cover uk-width-1-1 uk-height-1-1 uk-transition-opaque uk-transition-scale-up" />
                        </div>
                        <div class="news-card-title line-height-1">@item.NewsDescription</div>
                        @*<div class="news-card-subtitle">@item.NewsDescription</div>*@
                    </a>
                }
            </div>
        }
    </div>
</section>
