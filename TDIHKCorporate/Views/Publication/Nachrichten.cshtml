@model List<TDIHKCorporate.Types.News>
@using System.Globalization
@{
    Layout = "~/Views/Shared/_layoutMaster.cshtml";

    CultureInfo cultureInfo = System.Threading.Thread.CurrentThread.CurrentCulture;
    string lang = cultureInfo.TwoLetterISOLanguageName;
}

<head>
    <meta charset="utf-8">

    @if (lang == "tr")
    {
        <meta name="description" content="TD IHK haberlerine bu sayfadan ulaşabilirsiniz. TD IHK ile ilgili gündemdeki ve güncel haberler ile sektörel ve iş dünyasındaki yeniliklerden haberdar olabilirsiniz.">
        <title>TD IHK Haberler</title>
    }
    else
    {
        <meta name="description" content="Sie können TD IHK Nachrichten von dieser Seite erreichen. Sie können über aktuelle und aktuelle Nachrichten zu TD IHK sowie über Innovationen in der Branche und in der Geschäftswelt informiert werden.">
        <title>TD IHK Nachrichten</title>
    }

    <meta name="keywords" content="td ihk haberler,ihk haber,almanya haberleri,td ihk nachrichten,germany nachrichten">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="TD IHK">
</head>


<main class="uk-container" uk-scrollspy="cls: uk-animation-fade; target: > section; delay: 250">

	@Html.Action("GetNachrichtenHead")


	<!--Alt kısım-->
	<section>
		<div class="uk-flex uk-flex-middle uk-margin-small-bottom"><span style="height: 25px; width: 5px; background-color: black" class="uk-margin-small-right"></span><span class="size-20" style="color: black">@Resources.resource.Haberler</span></div>
		<div class="uk-grid uk-grid-small uk-grid-row-large uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-margin-medium-bottom" uk-grid>
			<!-- Buradaki imajlara da 500px en 300px boy şeklinde yüklemeliyiz.-->

			@foreach (var item in Model)
			{
				<div>
					@if (item.Language == "tr")
					{
						<a href="/tr/haberler/@item.NewsSeoLink" class="uk-link-reset">
							<div class="uk-inline-clip uk-transition-toggle">
								<img data-src="@item.NewsThumbnailPath" class="uk-width-1-1 uk-height-1-1 uk-transition-opaque uk-transition-scale-up" uk-img/>
							</div>
							<div class="news-card-title line-height-1">@item.NewsTitle</div>
							@*<div class="news-card-subtitle">@item.NewsDescription</div>*@
						</a>
					}
					else
					{
						<a href="/de/nachrichten/@item.NewsSeoLink" class="uk-link-reset">
							<div class="uk-inline-clip uk-transition-toggle">
								<img data-src="@item.NewsThumbnailPath" class="uk-width-1-1 uk-height-1-1 uk-transition-opaque uk-transition-scale-up" uk-img/>
							</div>
							<div class="news-card-title line-height-1">@item.NewsTitle</div>
							@*<div class="news-card-subtitle">@item.NewsDescription</div>*@
						</a>
					}

				</div>
			}
		</div>
	</section>
	<section class="uk-section">
		<div class="uk-width-1-2@m uk-margin-auto">
			@if (lang == "tr")
			{
				<a class="uk-button uk-button-primary uk-width-1-1 uk-border-rounded" href="/tr/sayfalar/etkinlik-arsivi">Dijital Arşiv</a>
			}
			else
			{
				<a class="uk-button uk-button-primary uk-width-1-1 uk-border-rounded" href="/de/seiten/event-archive">Digital Archiv</a>
			}
		</div>
	</section>
</main>



@Html.Action("Index", "Newsletter")

